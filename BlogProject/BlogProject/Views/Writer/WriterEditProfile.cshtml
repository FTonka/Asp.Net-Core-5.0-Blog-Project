@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Bilgileri Güncelleme Sayfası</h4>
            @using(Html.BeginForm("WriterEditProfile","Writer",FormMethod.Post)){
                 <input type="hidden" asp-for="WriterID">
                <div class="form-group">
                    <label for="exampleInputName1">Yazar Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="İsim" asp-for="WriterName">
                    <span asp-validation-for="WriterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                     <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email" asp-for="WriterMail">
                    <span asp-validation-for="WriterMail" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Eski Parola</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword"  name="eskiParola" placeholder="Password">
                    <p class="text text-danger">@ViewBag.hata1</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni Parola</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" name="pass1" placeholder="Password">
                    <span asp-validation-for="WriterPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni Parolayı Doğrulayın</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" name="pass2" placeholder="Password">
                    <p class="text text-danger">@ViewBag.hata</p>
                </div>
                @await Html.PartialAsync("~/Views/Writer/WriterImageLocation.cshtml")
                <div class="form-group">
                    <label for="exampleTextarea1">Textarea</label>
                        <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="WriterAbout"></textarea>
                    <span asp-validation-for="WriterAbout" class="text-danger"></span>
                    </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            }
        </div>
    </div>
</div>