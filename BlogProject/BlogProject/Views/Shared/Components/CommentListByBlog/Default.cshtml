@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
	<h4>Yorumlar</h4>
	@if (Model.Count() == 0)
	{
		<p>Daha önce hiç yorum yapılmamış. İlk yorumu siz yapın...</p>
	}
	else{
	@foreach(var item in Model){
	<div class="media">
		
		<img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
		<div class="media-body">
			<h5 class="mt-0">@item.CommentUsername</h5>
			<p>
				@item.CommentContent
			</p>
		</div>
		
	</div>
		}}
</div>