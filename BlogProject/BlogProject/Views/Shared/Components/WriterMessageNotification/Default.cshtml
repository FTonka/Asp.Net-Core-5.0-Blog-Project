@using EntityLayer.Concrete
@model List<Message2>
@{
    Layout = null;
}

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Messages</h6>
    @foreach(var item in Model){
    <div class="dropdown-divider"></div>
    <a class="dropdown-item preview-item">
        <div class="preview-thumbnail">
            <img src="~/writer/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
        </div>
        <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
            <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.WriterName sana mesaj gönderdi.</h6>
            <p class="text-gray mb-0">@item.MessageDate.ToShortDateString()</p>
        </div>
    </a>
    <div class="dropdown-divider"></div>
    }
    <h6 class="p-3 mb-0 text-center">Toplam @ViewBag.totalMessages mesaj bulunmaktadır.</h6>
</div>
