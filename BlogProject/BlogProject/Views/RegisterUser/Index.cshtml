@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/Alay/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Alay/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Alay/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Alay/css/animate.css" rel="stylesheet">
    <link href="~/Alay/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Asp.Net Core 5.0</h1>

            </div>
            <h3>Kayıt Ol</h3>
            <p>Giriş yapmak için lütfen kayıt olun</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="@Model.NameSurname">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Mail Adresi" asp-for="@Model.Mail">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" asp-for="@Model.Username">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="@Model.Password">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="@Model.ConfirmPassword">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly">
                    
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i>Şartları ve sözleşmeyi kabul eidyorum.</label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                <p class="text-muted text-center"><small>Zaten bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index/">Login</a>
            </form>
            <p class="m-t"> <small>Asp.net Core 5.0 Kampı | Tüm haklar saklıdır.</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Alay/js/jquery-3.1.1.min.js"></script>
    <script src="~/Alay/js/popper.min.js"></script>
    <script src="~/Alay/js/bootstrap.js"></script>
    <!-- iCheck -->

</body>

</html>
